{
	"meta": {
		"title": "Simple One-Page"
	},

	"document": {

		"pages": [

			{
				"size": [0, 0, 360, 360],
				"elements": [

					{
						"elementType": "image",
						"field": "image",
						"position": [30, 30],
						"width": 300,
						"height": 300
					},

					{
						"elementType": "text",
						"options": { "align": "center" },
						"overflow": false,
						"position": [30, 300],
						"fontSize": 30,
						"height": 30,
						"width": 120,
						"field": "title"
					}

				]
			}
		]
	}
}

